<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="Frag_adm_menu_add_blocos_e_salas.AddBlocoFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:padding="10dp"
        android:text="Bloco:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:id="@+id/frameLayout"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/frameLayout3"
        android:layout_alignEnd="@+id/frameLayout3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/frameLayout3"
        android:layout_alignStart="@+id/frameLayout3">

        <Spinner
            android:id="@+id/sp_letraBloco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/sp_numSala"
            android:layout_alignStart="@+id/sp_numSala"
            android:layout_alignTop="@+id/textView3"
            android:dropDownWidth="match_parent"
            android:gravity="right"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:padding="10dp"
        android:text="Sala:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="94dp"
        android:layout_marginStart="94dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:background="@android:color/background_light">

        <Spinner
            android:id="@+id/sp_numSala"
            android:layout_width="76dp"
            android:layout_height="39dp"
            android:layout_above="@+id/textView5"
            android:layout_alignTop="@+id/textView4"
            android:layout_toEndOf="@+id/textView5"
            android:gravity="right" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:padding="10dp"
        android:text="Num. de Pc's:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/frameLayout3"
        android:layout_alignRight="@+id/frameLayout3"
        android:layout_alignTop="@+id/textView5"
        android:background="@android:color/background_light"
        android:layout_alignBottom="@+id/textView5">

        <Spinner
            android:id="@+id/sp_qtdeComp"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/sp_numSala"
            android:layout_alignStart="@+id/sp_numSala"
            android:layout_alignTop="@+id/textView5" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_gravar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRAVAR"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@+id/btn_listarBlocos1"
        android:layout_toLeftOf="@+id/frameLayout"
        android:layout_toStartOf="@+id/frameLayout" />

    <Button
        android:id="@+id/btn_listarBlocos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Blocos 1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/btn_listarBlocos2"
        android:layout_toStartOf="@+id/btn_listarBlocos2" />

    <Button
        android:id="@+id/btn_listarBlocos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Blocos 2"
        android:layout_alignBaseline="@+id/btn_listarBlocos1"
        android:layout_alignBottom="@+id/btn_listarBlocos1"
        android:layout_alignRight="@+id/frameLayout4"
        android:layout_alignEnd="@+id/frameLayout4" />

</RelativeLayout>
